<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom Form View  -->
    <record id="things_gate_view_form" model="ir.ui.view">
        <field name="name">Gate Form</field>
        <field name="model">things.gate</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
    
                    </group>
                    <group>
                        <field name="location"/>
                        <button name="confirm_new_gate_registration"
                                string="Confirm New Gate"
                                type="object"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Custom Tree (=List) View  -->
    <record id="things_gate_view_tree" model="ir.ui.view">
        <field name="name">Gate List</field>
        <field name="model">things.gate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="registrationConfirmed"/>
                <field name="name"/>
                <field name="location"/>
                <field name="route_to"/>
                <field name="route_from"/>
            </tree>
        </field>
    </record>

    <!-- Custom Search Options  -->
    <record id="things_gate_view_search" model="ir.ui.view">
        <field name="name">Gate Search</field>
        <field name="model">things.gate</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="location"/>
            </search>
        </field>
    </record>

</odoo>