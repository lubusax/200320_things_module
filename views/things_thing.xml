<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom Form View  -->
    <record id="things_thing_view_form" model="ir.ui.view">
        <field name="name">Thing Form</field>
        <field name="model">things.thing</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
    
                    </group>
                    <group>
                        <field name="route_to_thing"/>
                        <field name="route_from_thing"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Custom Tree (=List) View  -->
    <record id="things_thing_view_tree" model="ir.ui.view">
        <field name="name">Thing List</field>
        <field name="model">things.thing</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="route_to_thing"/>
                <field name="route_from_thing"/>
            </tree>
        </field>
    </record>

    <!-- Custom Search Options  -->
    <record id="things_thing_view_search" model="ir.ui.view">
        <field name="name">Thing Search</field>
        <field name="model">things.thing</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>